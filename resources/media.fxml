<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.youz.media.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="文件">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openDirectory" text="选择文件夹" />
                  <MenuItem mnemonicParsing="false" onAction="#openFile" text="选择文件" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="帮助">
            <items>
              <MenuItem mnemonicParsing="false" text="捐赠" onAction="#showDonation"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <ProgressBar prefHeight="18.0" prefWidth="1393.0" progress="0.0" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <SplitPane prefHeight="657.0" prefWidth="450.0" BorderPane.alignment="CENTER">
         <items>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <CheckBox layoutX="22.0" layoutY="50.0" mnemonicParsing="false" text="片头截取(秒)" />
                  <CheckBox layoutX="22.0" layoutY="92.0" mnemonicParsing="false" text="片尾截取(秒)" />
                  <TextField layoutX="146.0" layoutY="47.0" />
                  <TextField layoutX="146.0" layoutY="89.0" />
                  <Button layoutX="-1.0" layoutY="598.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="451.0" text="开始" />
                  <CheckBox layoutX="22.0" layoutY="132.0" mnemonicParsing="false" text="视频裁剪频率(秒)" />
                  <TextField layoutX="146.0" layoutY="129.0" />
               </children>
            </Pane>
         </items>
      </SplitPane>
   </right>
   <center>
      <TableView fx:id="mediTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="id" prefWidth="50.0" text="序号" />
          <TableColumn fx:id="fileName" prefWidth="272.0" text="名称" />
            <TableColumn fx:id="durationFormat" prefWidth="110.0" text="时长" />
            <TableColumn fx:id="fileSize" minWidth="0.0" prefWidth="110.0" text="大小" />
            <TableColumn prefWidth="71.0" text="进度" />
            <TableColumn prefWidth="135.0" text="操作" />
        </columns>
      </TableView>
   </center>
</BorderPane>
